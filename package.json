{
  "name": "supa",
  "description": "Root package for Supa monorepo - coordinates development workflow across client, core, and server packages",
  "private": true,
  "workspaces": ["packages/*"],
  "devDependencies": {
    "airul": "^0.1.34"
  },
  "scripts": {
    "postinstall": "airul gen",
    "dev": "cd packages/desktop && npm run dev",
    "dev:web": "cd packages/client && npm run dev",
    "build": "cd packages/desktop && npm run build",
    "build:web": "cd packages/client && npm run build"
  }
}