{
  "version": "2.0.0",
  "tasks": [
    {
      "type": "npm",
      "script": "dev:without-starting-electron",
      "path": "packages/desktop/",
      "label": "dev-client",
      "detail": "Start SvelteKit dev server for desktop",
      "group": "build",
      "isBackground": true,
      "problemMatcher": {
        "owner": "vite",
        "pattern": {
          "regexp": "^(.*)$",
          "file": 1
        },
        "background": {
          "activeOnStart": true,
          "beginsPattern": "^.*Local:.*$",
          "endsPattern": "^.*ready in.*$"
        }
      }
    },
    {
      "type": "npm",
      "script": "stop-dev",
      "label": "stop-dev-client",
      "detail": "Stop the SvelteKit dev server",
      "group": "build",
      "presentation": {
        "echo": false,
        "reveal": "silent",
        "focus": false,
        "panel": "shared",
        "showReuseMessage": false
      }
    }
  ]
}