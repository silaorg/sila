{
  "version": "2.0.0",
  "tasks": [
    {
      "type": "npm",
      "script": "dev:without-starting-electron",
      "path": "packages/desktop/",
      "label": "dev-client",
      "detail": "Start SvelteKit dev server for desktop",
      "group": "build",
      "isBackground": true,
      "problemMatcher": {
        "owner": "vite",
        "pattern": {
          "regexp": "^(.*)$",
          "file": 1
        },
        "background": {
          "activeOnStart": true,
          "beginsPattern": "^.*Local:.*$",
          "endsPattern": "^.*ready in.*$"
        }
      }
    }
  ]
}