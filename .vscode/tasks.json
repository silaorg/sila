{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "dev-server",
      "type": "shell",
      "command": "npm -w packages/server run dev",
      "group": "build",
      "isBackground": true,
      "problemMatcher": {
        "owner": "server",
        "pattern": {
          "regexp": "^(.*)$",
          "file": 1
        },
        "background": {
          "activeOnStart": true,
          "beginsPattern": "^[>].*$",
          "endsPattern": "^\\[server\\] listening on http://localhost:6001$"
        }
      }
    },
    {
      "label": "dev-web",
      "type": "shell",
      "command": "npm -w packages/web run dev",
      "group": "build",
      "isBackground": true,
      "problemMatcher": {
        "owner": "vite",
        "pattern": {
          "regexp": "^(.*)$",
          "file": 1
        },
        "background": {
          "activeOnStart": true,
          "beginsPattern": "^.*Local:.*$",
          "endsPattern": "^.*Local:.*$"
        }
      }
    },
    {
      "label": "dev-web-server",
      "dependsOn": [
        "dev-server",
        "dev-web"
      ],
      "group": "build",
      "problemMatcher": []
    },
    {
      "type": "npm",
      "script": "dev:without-starting-electron",
      "path": "packages/desktop/",
      "label": "dev-client",
      "detail": "Start Vite dev server for desktop",
      "group": "build",
      "isBackground": true,
      "problemMatcher": {
        "owner": "vite",
        "pattern": {
          "regexp": "^(.*)$",
          "file": 1
        },
        "background": {
          "activeOnStart": true,
          "beginsPattern": "^.*Local:.*$",
          "endsPattern": "^.*ready in.*$"
        }
      }
    },
    {
      "type": "npm",
      "script": "stop-dev",
      "label": "stop-dev-client",
      "detail": "Stop the Vite dev server",
      "group": "build",
      "presentation": {
        "echo": false,
        "reveal": "silent",
        "focus": false,
        "panel": "shared",
        "showReuseMessage": false
      }
    }
  ]
}
