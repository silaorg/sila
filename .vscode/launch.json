{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Web: Chrome (Server + Web)",
      "type": "pwa-chrome",
      "request": "launch",
      "url": "http://localhost:7001",
      "webRoot": "${workspaceFolder}/packages/web",
      "sourceMaps": true,
      "sourceMapPathOverrides": {
        "vite:///*": "${webRoot}/*",
        "vite:///*/src/*": "${webRoot}/src/*",
        "http://localhost:7001/*": "${webRoot}/*",
        "http://localhost:7001/src/*": "${webRoot}/src/*",
        "/@fs/*": "${workspaceFolder}/*",
        "webpack:///*": "${webRoot}/*"
      },
      "preLaunchTask": "dev-web-server"
    },
    {
      "name": "Launch Chrome against localhost",
      "type": "chrome",
      "request": "launch",
      "url": "http://localhost:6969",
      "webRoot": "${workspaceFolder}/packages/client/src",
      "sourceMaps": true,
      "preLaunchTask": "dev-client",
      "postDebugTask": "stop-dev-client"
    },
    {
      "name": "Attach to Chrome",
      "type": "chrome",
      "request": "attach",
      "port": 9222,
      "url": "http://localhost:6969",
      "webRoot": "${workspaceFolder}/packages/client/src",
      "sourceMaps": true
    },
    {
      "name": "Debug Electron Main Process",
      "type": "node",
      "request": "launch",
      "cwd": "${workspaceFolder}/packages/desktop",
      "runtimeExecutable": "${workspaceFolder}/node_modules/.bin/electron",
      "windows": {
        "runtimeExecutable": "${workspaceFolder}/node_modules/.bin/electron.cmd"
      },
      "args": [
        ".",
        "--remote-debugging-port=9222"
      ],
      "outputCapture": "std",
      "preLaunchTask": "dev-client",
      "postDebugTask": "stop-dev-client",
      "env": {
        "NODE_ENV": "development",
        "ELECTRON_ENABLE_LOGGING": "true",
        "ELECTRON_ENABLE_STACK_DUMPING": "true"
      }
    },
    {
      "name": "Debug Electron Renderer Process",
      "type": "chrome",
      "request": "attach",
      "port": 9222,
      "webRoot": "${workspaceFolder}",
      "sourceMaps": true,
      "timeout": 30000
    },
    {
      "name": "Workbench: Vite dev (SSR, Node)",
      "type": "node",
      "request": "launch",
      "cwd": "${workspaceFolder}/packages/workbench",
      "program": "${workspaceFolder}/packages/workbench/node_modules/vite/bin/vite.js",
      "args": [
        "dev"
      ],
      "runtimeArgs": [
        "--inspect"
      ],
      "skipFiles": [
        "<node_internals>/**"
      ]
    },
    {
      "name": "Workbench: Attach Chrome (client)",
      "type": "chrome",
      "request": "launch",
      "url": "http://localhost:5173",
      "webRoot": "${workspaceFolder}",
      "sourceMaps": true,
      "trace": true
    }
  ],
  "compounds": [
    {
      "name": "ðŸ‘‰ Debug Electron All",
      "configurations": [
        "Debug Electron Main Process",
        "Debug Electron Renderer Process"
      ],
      "presentation": {
        "order": 1
      }
    },
    {
      "name": "ðŸ§ª Debug Workbench",
      "configurations": [
        "Workbench: Vite dev (SSR, Node)",
        "Workbench: Attach Chrome (client)"
      ]
    }
  ]
}
