{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Dev: npm run dev (root)",
      "type": "node",
      "request": "launch",
      "cwd": "${workspaceFolder}",
      "runtimeExecutable": "npm",
      "runtimeArgs": ["run", "dev"],
      "presentation": { "reveal": "silent" },
      "console": "integratedTerminal"
    },
    {
      "name": "Attach to Electron Renderer (port 9222)",
      "type": "chrome",
      "request": "attach",
      "port": 9222,
      "webRoot": "${workspaceFolder}"
    }
  ],
  "compounds": [
    {
      "name": "Launch & Attach",
      "configurations": [
        "Dev: npm run dev (root)",
        "Attach to Electron Renderer (port 9222)"
      ]
    }
  ]
} 