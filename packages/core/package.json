{
  "name": "@sila/core",
  "private": true,
  "version": "1.0.0",
  "description": "Core for Sila that can be used on clients, servers, and inside other services",
  "type": "module",
  "main": "./src/index.ts",
  "types": "./src/index.ts",
  "exports": {
    ".": "./src/index.ts"
  },
  "scripts": {
    "check": "tsc -p tsconfig.json --noEmit",
    "watch": "tsc -p tsconfig.json --noEmit --watch",
    "test": "vitest run --reporter=verbose --no-watch",
    "test:node": "vitest run --config tests/vitest.config.ts",
    "test:svelte": "vitest run --config tests/vitest.config.svelte.ts"
  },
  "dependencies": {
    "aiwrapper": "^2.0.0-alpha.6",
    "reptree": "^0.2.4"
  },
  "devDependencies": {
    "@types/node": "^24.5.2",
    "typescript": "~5.8.3",
    "vitest": "^2.1.1",
    "tsx": "^4.0.0",
    "jsdom": "^24.0.0",
    "@testing-library/svelte": "^4.0.0",
    "@sveltejs/vite-plugin-svelte": "^6.0.0"
  }
}
