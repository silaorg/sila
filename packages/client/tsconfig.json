{
  "compilerOptions": {
    "target": "es2021",
    "module": "esnext",
    "moduleResolution": "bundler",
    "strict": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "allowJs": true,
    "checkJs": true,
    "resolveJsonModule": true,
    "sourceMap": true
  },
  "baseUrl": ".",
  "paths": {
    "$lib": ["src/lib/index.ts"],
    "$lib/*": ["src/lib/*"]
  },
  "include": ["src/**/*"]
}
