{
  "name": "@sila/desktop",
  "version": "1.0.0",
  "description": "Sila Desktop App - Svelte + Vite + Electron",
  "type": "module",
  "main": "src-electron/main.js",
  "build": {
    "appId": "com.silaintelligence.app",
    "productName": "Sila",
    "directories": {
      "output": "dist"
    },
    "files": [
      "src-electron/**",
      {
        "from": "build",
        "to": ""
      }
    ],
    "publish": {
      "provider": "github",
      "owner": "silaorg",
      "repo": "sila"
    },
    "mac": {
      "category": "public.app-category.productivity",
      "identity": "Dmitrii Kurilchenko (UY76UFAS3C)",
      "hardenedRuntime": true,
      "gatekeeperAssess": false,
      "entitlements": "build/entitlements.mac.plist",
      "entitlementsInherit": "build/entitlements.mac.plist",
      "notarize": true,
      "target": [
        {
          "target": "dmg",
          "arch": ["universal"]
        }
      ]
    },
    "win": {
      "icon": "build/favicon.ico",
      "target": [
        {
          "target": "nsis",
          "arch": ["x64"]
        }
      ]
    },
    "linux": {
      "icon": "build/icon.png",
      "target": [
        {
          "target": "AppImage",
          "arch": ["x64"]
        }
      ]
    }
  },
  "scripts": {
    "prepare-static-files": "cpy '../client/static/**' './static-compiled' && cpy './static-desktop/**' './static-compiled' && cpy '../../docs/assets/icons/icon.png' './build'",
    "dev": "npm run prepare-static-files && concurrently \"npm run dev:client\" \"npm run dev:sveltekit\" \"npm run dev:electron\"",
    "dev:without-starting-electron": "npm run prepare-static-files && concurrently \"npm run dev:sveltekit\" \"npm run dev:client\"",
    "dev:sveltekit": "vite dev --port 6969",
    "dev:client": "npm run dev -w @sila/client",
    "dev:electron": "wait-on http://localhost:6969 && electron . --dev --remote-debugging-port=9222",
    "build": "npm run prepare-static-files && npm run build -w @sila/client && npm run build:vite",
    "build:vite": "vite build",
    "prepackage:mac": "npm run build",
    "package:mac": ". .env && export APPLE_ID=\"$APPLE_ID\" APPLE_TEAM_ID=\"$APPLE_TEAM_ID\" APPLE_APP_SPECIFIC_PASSWORD=\"${APPLE_APP_SPECIFIC_PASSWORD:-$APPLE_ID_PASSWORD}\" && CSC_IDENTITY_AUTO_DISCOVERY=true electron-builder --mac",
    "prepackage:win": "npm run build",
    "package:win": "electron-builder --win",
    "prepackage:win:signed": "npm run build",
    "package:win:signed": ". .env && electron-builder --win",
    "prepackage:linux": "npm run build",
    "package:linux": "electron-builder --linux",
    "build:publish": "npm run build && electron-builder --publish=always",
    "build:publish-draft": "npm run build && electron-builder --publish=draft",
    "preview": "vite preview",
    "start": "electron .",
    "check": "svelte-check"
  },
  "dependencies": {
    "@sila/client": "*",
    "@sila/core": "*",
    "chokidar": "^4.0.3",
    "electron-serve": "^2.1.1",
    "electron-updater": "^6.1.7"
  },
  "devDependencies": {
    "@sveltejs/vite-plugin-svelte": "^6.0.0",
    "@tsconfig/svelte": "^5.0.4",
    "svelte": "^5.36.16",
    "svelte-check": "^4.2.2",
    "typescript": "~5.8.3",
    "vite": "^7.0.4",
    "@types/node": "^24.1.0",
    "concurrently": "^8.2.2",
    "cpy-cli": "^5.0.0",
    "electron": "37.2.3",
    "electron-builder": "26.0.12",
    "wait-on": "^7.2.0"
  }
}