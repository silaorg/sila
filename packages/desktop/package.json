{
  "name": "@supa/desktop",
  "version": "1.0.0",
  "description": "Supa Desktop App - SvelteKit + Electron",
  "type": "module",
  "main": "main.js",
  "build": {
    "appId": "com.supa.desktop",
    "productName": "Supa",
    "directories": {
      "output": "dist"
    },
    "files": [
      "main.js",
      {
        "from": "build",
        "to": ""
      }
    ]
  },
  "scripts": {
    "prepare": "svelte-kit sync",
    "dev": "concurrently \"npm run client:dev\" \"npm run sveltekit:dev\" \"npm run electron:dev\"",
    "dev:without-starting-electron": "concurrently \"npm run sveltekit:dev\" \"npm run client:dev\"",
    "sveltekit:dev": "vite dev --port 6969",
    "client:dev": "cd ../client && npm run dev",
    "client:build": "cd ../client && npm run build",
    "electron:dev": "wait-on http://localhost:6969 && electron . --dev --remote-debugging-port=9222",
    "build": "npm run client:build && npm run sveltekit:build && npm run electron:build",
    "sveltekit:build": "vite build",
    "electron:build": "electron-builder",
    "electron:build:mac": "electron-builder --mac",
    "electron:build:win": "electron-builder --win",
    "electron:build:linux": "electron-builder --linux",
    "preview": "vite preview",
    "start": "electron .",
    "check": "svelte-check --tsconfig ./tsconfig.json",
    "check:watch": "svelte-check --tsconfig ./tsconfig.json --watch"
  },
  "dependencies": {
    "@supa/client": "*",
    "@supa/core": "*",
    "electron-serve": "^2.1.1"
  },
  "devDependencies": {
    "svelte": "^5.0.0",
    "svelte-check": "^4.0.5",
    "@sveltejs/adapter-static": "^3.0.1",
    "@sveltejs/kit": "^2.0.0",
    "@sveltejs/vite-plugin-svelte": "^4.0.0",
    "@types/node": "22.7.3",
    "concurrently": "^8.2.2",
    "electron": "37.2.3",
    "electron-builder": "26.0.12",
    "typescript": "^5.0.0",
    "vite": "^5.4.11",
    "wait-on": "^7.2.0"
  }
}