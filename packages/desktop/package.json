{
  "name": "@sila/desktop",
  "private": true,
  "version": "1.5.2",
  "description": "Sila",
  "homepage": "https://silain.com",
  "author": {
    "name": "Dmitry Kury",
    "email": "d@dkury.com"
  },
  "type": "module",
  "main": "src-electron/main-electron.js",
  "build": {
    "appId": "com.silain.desktop",
    "productName": "Sila",
    "directories": {
      "output": "dist"
    },
    "files": [
      "src-electron/**",
      {
        "from": "build",
        "to": ""
      }
    ],
    "publish": {
      "provider": "github",
      "owner": "silaorg",
      "repo": "sila"
    },
    "mac": {
      "category": "public.app-category.productivity",
      "identity": "Dmitrii Kurilchenko (UY76UFAS3C)",
      "hardenedRuntime": true,
      "gatekeeperAssess": false,
      "entitlements": "build/entitlements.mac.plist",
      "entitlementsInherit": "build/entitlements.mac.plist",
      "notarize": true,
      "artifactName": "Sila-${version}-macos-universal.${ext}",
      "target": [
        {
          "target": "dmg",
          "arch": [
            "universal"
          ]
        },
        {
          "target": "zip",
          "arch": [
            "universal"
          ]
        }
      ]
    },
    "win": {
      "icon": "build/icon.ico",
      "artifactName": "Sila-${version}-windows-${arch}.${ext}",
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64",
            "arm64"
          ]
        }
      ]
    },
    "linux": {
      "artifactName": "Sila-${version}-linux-${arch}.${ext}",
      "maintainer": "Dmitry Kury <d@dkury.com>",
      "target": [
        {
          "target": "AppImage",
          "arch": [
            "x64",
            "arm64"
          ]
        },
        {
          "target": "deb",
          "arch": [
            "x64",
            "arm64"
          ]
        }
      ]
    },
    "nsis": {
      "installerIcon": "build/icon.ico",
      "uninstallerIcon": "build/icon.ico",
      "installerHeaderIcon": "build/icon.ico"
    }
  },
  "scripts": {
    "prepare-static-files": "mkdir -p static-compiled && cp -r ../client/static/* ./static-compiled/ && cp -r ./static-desktop/* ./static-compiled/",
    "dev": "npm run prepare-static-files && concurrently \"npm run dev:client\" \"npm run dev:sveltekit\" \"npm run dev:electron\"",
    "dev:without-starting-electron": "npm run prepare-static-files && concurrently \"npm run dev:sveltekit\" \"npm run dev:client\"",
    "dev:sveltekit": "vite dev --port 6969",
    "dev:client": "npm run dev -w @sila/client",
    "dev:electron": "wait-on http://localhost:6969 && electron . --dev --remote-debugging-port=9222",
    "build": "npm run prepare-static-files && npm run build -w @sila/client && npm run build:vite",
    "build:vite": "vite build",
    "prepackage:mac": "npm run build",
    "package:mac": ". .env && ./scripts/setup-macos-signing.sh && electron-builder --mac",
    "package:mac:unsigned": "npm run build && CSC_IDENTITY_AUTO_DISCOVERY=false electron-builder --mac -c.mac.identity=null -c.mac.hardenedRuntime=false -c.mac.notarize=false",
    "prepackage:win": "npm run build",
    "package:win": "electron-builder --win",
    "prepackage:win:signed": "npm run build",
    "package:win:signed": ". .env && electron-builder --win",
    "prepackage:linux": "npm run build",
    "package:linux": "electron-builder --linux",
    "build:publish": "npm run build && electron-builder --publish=always",
    "build:publish-draft": "npm run build && electron-builder --publish=draft",
    "create-desktop-build": "./scripts/create-desktop-build.sh",
    "preview": "vite preview",
    "start": "electron .",
    "check": "svelte-check"
  },
  "dependencies": {
    "@sila/client": "*",
    "@sila/core": "*",
    "@types/semver": "^7.7.1",
    "adm-zip": "^0.5.16",
    "chokidar": "^4.0.3",
    "electron-updater": "^6.1.7",
    "semver": "^7.7.2"
  },
  "devDependencies": {
    "@sveltejs/vite-plugin-svelte": "^6.0.0",
    "@tsconfig/svelte": "^5.0.4",
    "@types/adm-zip": "^0.5.7",
    "@types/node": "^24.1.0",
    "concurrently": "^8.2.2",
    "cpy-cli": "^5.0.0",
    "electron": "37.10.3",
    "electron-builder": "26.0.12",
    "svelte": "^5.36.16",
    "svelte-check": "^4.2.2",
    "typescript": "~5.8.3",
    "vite": "^7.3.0",
    "wait-on": "^7.2.0"
  }
}
