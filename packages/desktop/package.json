{
  "name": "@supa/desktop",
  "version": "1.0.0",
  "description": "Supa Desktop App - SvelteKit + Electron",
  "type": "module",
  "main": "main.js",
  "scripts": {
    "prepare": "svelte-kit sync",
    "dev": "concurrently \"npm run svelte:dev\" \"npm run electron:dev\"",
    "svelte:dev": "vite dev --port 6969",
    "electron:dev": "wait-on http://localhost:6969 && electron . --dev --remote-debugging-port=9222",
    "build": "npm run svelte:build && npm run electron:build",
    "svelte:build": "vite build",
    "electron:build": "electron-builder",
    "electron:build:mac": "electron-builder --mac",
    "electron:build:win": "electron-builder --win",
    "electron:build:linux": "electron-builder --linux",
    "preview": "vite preview",
    "start": "electron .",
    "check": "svelte-check --tsconfig ./tsconfig.json",
    "check:watch": "svelte-check --tsconfig ./tsconfig.json --watch"
  },
  "build": {
    "appId": "com.supa.desktop",
    "productName": "Supa Desktop",
    "directories": {
      "output": "dist"
    },
    "files": [
      "main.js",
      "build/**/*",
      "node_modules/**/*"
    ],
    "extraResources": [
      "build/**/*"
    ]
  },
  "dependencies": {
    "@floating-ui/dom": "1.6.11",
    "@tailwindcss/forms": "^0.5.9",
    "@tailwindcss/typography": "^0.5.15",
    "@tauri-apps/api": "^2.4.1",
    "@tauri-apps/plugin-dialog": "^2.0.0",
    "@tauri-apps/plugin-fs": "^2.0.0",
    "@tauri-apps/plugin-process": "^2.2.1",
    "@tauri-apps/plugin-shell": "^2.0.0",
    "@tauri-apps/plugin-updater": "^2.7.1",
    "dexie": "^4.0.11",
    "github-slugger": "^2.0.0",
    "highlight.js": "11.10.0",
    "katex": "^0.16.21",
    "lucide-svelte": "^0.453.0",
    "marked": "^15.0.6",
    "svelte-persisted-store": "^0.12.0"
  },
  "devDependencies": {
    "concurrently": "^8.2.2",
    "electron": "^28.0.0",
    "electron-builder": "^24.6.4",
    "wait-on": "^7.2.0",
    "@skeletonlabs/skeleton": "^3.1.2",
    "@skeletonlabs/skeleton-svelte": "^1.2.0",
    "@sveltejs/adapter-static": "^3.0.1",
    "@sveltejs/kit": "^2.0.0",
    "@sveltejs/vite-plugin-svelte": "^4.0.0",
    "@tailwindcss/vite": "^4.1.3",
    "@types/node": "22.7.3",
    "autoprefixer": "10.4.20",
    "shiki": "^2.0.3",
    "svelte": "^5.0.0",
    "svelte-check": "^4.0.5",
    "tailwindcss": "^4.1.3",
    "tslib": "^2.8.0",
    "typescript": "^5.0.0",
    "vite": "^5.4.11"
  }
}