{
  "name": "@sila/mobile",
  "version": "1.0.0",
  "description": "Sila Mobile App - Svelte + Vite + Capacitor",
  "type": "module",
  "scripts": {
    "dev": "concurrently \"npm run dev:client\" \"vite dev\"",
    "dev:client": "npm run dev -w @sila/client",
    "build": "npm run build:client && npm run build:vite && npx cap sync",
    "build:vite": "vite build",
    "build:client": "npm run build -w @sila/client",
    "preview": "vite preview",
    "check": "svelte-check"
  },
  "dependencies": {
    "@sila/client": "*",
    "@sila/core": "*",
    "@capacitor/android": "^7.4.2",
    "@capacitor/ios": "^7.4.2"
  },
  "devDependencies": {
    "@capacitor/cli": "^7.4.2",
    "svelte": "^5.36.16",
    "svelte-check": "^4.2.2",
    "@sveltejs/vite-plugin-svelte": "^6.0.0",
    "@tsconfig/svelte": "^5.0.4",
    "@types/node": "^24.1.0",
    "typescript": "~5.8.3",
    "vite": "^7.0.4",
    "concurrently": "^8.2.2"
  }
}
